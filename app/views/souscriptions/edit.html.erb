<%= titre_page "Modification souscription pour le client #{@adherent.full_name}" %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= bootstrap_form_for([@adherent, @souscription], layout: :horizontal) do |f| %>
              <div class="form-inputs">
                <%= f.date_field :date_expiration %>
              </div>

              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <%= link_to 'Annuler', @adherent, class: 'btn btn-white' %>
                  <%= f.button 'Modifier', class: 'btn btn-primary' %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

