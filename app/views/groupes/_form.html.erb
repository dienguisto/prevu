<%= bootstrap_form_for(@groupe, layout: :horizontal) do |f| %>

    <%= f.text_field :nom %>
    <% if current_user.user_system? %>
        <%= f.select :structure_aperitrice_id, StructureAperitrice.all.map{ |a| [a.nom, a.id]}, include_blank: true %>
    <% end %>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <h4>contacts</h4>
      </div>
    </div>

    <%= f.fields_for :contacts do |contact| %>
        <%= contact.text_field :titre %>
        <%= contact.text_field :nom %>
        <%= contact.text_field :prenom %>
        <%= contact.text_field :email %>
        <%= contact.telephone_field :telephone %>
        <%= contact.text_field :adresse %>
    <% end %>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Annuler', groupes_path, class: 'btn btn-white' %>
        <%= f.button 'Ajouter', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
