<%= titre_page 'Liste des groupements' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <% if current_user.user_system? or current_user.admin_structure_assurance? %>
              <div class="row">
                <div class="col-sm-12">
                  <div class="actions_bouton">
                    <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_groupe_path, class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
          <% end %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Nom</th>
                <th width="150px">Nombre adhÃ©rents</th>
                <% unless current_user.user_structure_assurance? %>
                    <th width="150px">pharmacies</th>
                    <th width="150px">structures sanitaires</th>
                <% end %>
              </tr>
              </thead>

              <tbody>
              <% @groupes.each do |groupe| %>
                  <tr>
                    <td><%= link_to groupe.nom, groupe %></td>
                    <td align="right"><%= groupe.adherents.count %></td>
                    <% unless current_user.user_structure_assurance? %>
                        <td align="right"><%= groupe.total_a_verser_pharmacies.to_s(:delimited, delimiter: ' ') %> F CFA</td>
                        <td align="right"><%= groupe.total_a_verser_structure_sanitaires.to_s(:delimited, delimiter: ' ') %> F CFA</td>
                    <% end %>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
