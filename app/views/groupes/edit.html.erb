<%= titre_page "Modification du groupe : #{@groupe.nom}" %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= bootstrap_form_for(@groupe, layout: :horizontal) do |f| %>

              <%= f.text_field :nom %>
              <% if current_user.user_system? %>
                  <%= f.select :structure_aperitrice_id, StructureAperitrice.all.map{ |a| [a.nom, a.id]}, include_blank: true %>
              <% end %>

              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <h4>contacts</h4>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <%= link_to 'Annuler', groupes_path, class: 'btn btn-white' %>
                  <%= f.button 'Modifier', class: 'btn btn-primary' %>
                </div>
              </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>