<%= bootstrap_form_for(@formule, layout: :horizontal) do |f| %>
    <%= f.text_field :nom %>
    <%= f.number_field :montant_adhesion %>
    <%= f.number_field :montant_cotisation %>
    <%= f.select :periode, Formule::PERIODES.keys %>
    <%= f.number_field :occurrence_periode %>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Annuler', formules_path, class: 'btn btn-white' %>
        <%= f.button 'Ajouter', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
