<% unless @adherent.parrain.nil? %>
    <% if current_user.user_structure_assurance? or current_user.admin_system? %>
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Ayant-droits</h5>
          </div>

          <div class="ibox-content">
            <div class="row">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                  <tr>
                    <th>Matricule</th>
                    <th>Nom</th>
                    <th>Affiliation</th>
                    <th>Statut</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @adherent.filleuls.each do |adherent| %>
                      <tr>
                        <td><%= link_to adherent.matricule, adherent %></td>
                        <td><%= adherent.full_name %></td>
                        <td><%= adherent.affiliation %></td>
                        <td><%= afficher_status adherent.status %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="text-right">
              <%= link_to '<strong>Ajouter</strong>'.html_safe, adherent_new_parrainage_path(@adherent.id, url_back: adherent_path(@adherent)), class: 'btn btn-sm btn-primary m-t-n-xs' %>
            </div>
          </div>
        </div>
    <% end %>
<% end %>