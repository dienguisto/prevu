<%= titre_page 'Liste des adherents' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_adherent_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Matricule</th>
                  <th>Nom</th>
                  <th>Date de naissance</th>
                  <th>Status</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @adherents.each do |adherent| %>
                  <tr>
                    <td><%= adherent.matricule %></td>
                    <td><%= adherent.full_name %></td>
                    <td><%= adherent.date_de_naissance %></td>
                    <td><%= afficher_status adherent.status %></td>
                    <td><%= set_link('adherents', 'show', adherent.id)%></td>
                    <td><%= set_link('adherents', 'edit', adherent.id)%></td>
                    <td><%= set_link('adherents', 'remove', adherent.id)%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
